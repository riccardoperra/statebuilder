{
  "name": "statebuilder",
  "license": "MIT",
  "homepage": "https://github.com/riccardoperra/statebuilder",
  "description": "Experimental pluggable state management system powered by SolidJS reactivity",
  "type": "module",
  "keywords": [
    "solid-js",
    "reactivity",
    "state-management",
    "solidjs",
    "state",
    "plugins"
  ],
  "author": {
    "name": "Riccardo Perra",
    "email": "riccardo.perra@icloud.com",
    "url": "https://github.com/riccardoperra"
  },
  "bugs": {
    "email": "riccardo.perra@icloud.com",
    "url": "https://github.com/riccardoperra/statebuilder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/riccardoperra/statebuilder"
  },
  "version": "0.4.0",
  "source": "src/index.ts",
  "module": "dist/index.mjs",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "private": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "browser": "./dist/index.mjs",
      "node": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./asyncAction": {
      "import": "./dist/plugins/asyncAction.mjs",
      "browser": "./dist/plugins/asyncAction.mjs",
      "node": "./dist/plugins/asyncAction.mjs",
      "default": "./dist/plugins/asyncAction.mjs"
    },
    "./commands": {
      "import": "./dist/plugins/commands.mjs",
      "browser": "./dist/plugins/commands.mjs",
      "node": "./dist/plugins/commands.mjs",
      "default": "./dist/plugins/commands.mjs"
    },
    "./devtools": {
      "import": "./dist/plugins/devtools.mjs",
      "browser": "./dist/plugins/devtools.mjs",
      "node": "./dist/plugins/devtools.mjs",
      "default": "./dist/plugins/devtools.mjs"
    },
    "./reducer": {
      "import": "./dist/plugins/reducer.mjs",
      "browser": "./dist/plugins/reducer.mjs",
      "node": "./dist/plugins/reducer.mjs",
      "default": "./dist/plugins/reducer.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "commands": [
        "dist/plugins/commands.d.ts"
      ],
      "asyncAction": [
        "dist/plugins/asyncAction.d.ts"
      ],
      "devtools": [
        "dist/plugins/devtools.d.ts"
      ],
      "reducer": [
        "dist/plugins/reducer.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:all": "pnpm test && pnpm typecheck",
    "typecheck": "vitest typecheck",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.5.1",
    "@vitest/coverage-c8": "^0.26.3",
    "happy-dom": "^8.1.2",
    "prettier": "^2.8.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-solid": "^2.5.0",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.26.3"
  },
  "dependencies": {
    "rxjs": "^7.8.0",
    "solid-js": "^1.6.7",
    "@solid-primitives/event-bus": "^1.0.5"
  },
  "peerDependenciesMeta": {
    "@solid-primitives/event-bus": {
      "optional": true
    },
    "rxjs": {
      "optional": true
    }
  }
}
